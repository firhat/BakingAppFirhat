<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:srcCompat="@drawable/label"
            android:layout_marginRight="5dp"/>

        <TextView
            android:id="@+id/tv_ingredient"
            android:hint="@string/hint_recipe"
            android:textColor="#333"
            android:layout_width="200dp"
            android:layout_toRightOf="@id/imageView"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_ingredient_quantity"
            android:hint="@string/hint_qty"
            android:textColor="#333"
            android:layout_toLeftOf="@+id/tv_ingredient_unit"
            android:layout_toStartOf="@+id/tv_ingredient_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ingredient_unit"
            android:hint="@string/hint_measure"
            android:textColor="#333"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.v7.widget.CardView>